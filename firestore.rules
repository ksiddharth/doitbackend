rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /jobs/{jobId} {
      allow create, read: if request.auth != null;
      allow update, delete: if false;
    }
    match /bookmark_jobs/{jobId} {
      allow create, read: if request.auth != null;
      allow update, delete: if false;
    }
    match /review_jobs/{jobId} {
      allow create, read: if request.auth != null;
      allow update, delete: if false;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
